{
  "env": {
      "es2021": true,
      "node": true
  },
  "extends": [
      "standard"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": 13,
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint"
  ],
  "ignorePatterns": ["*.test.ts"],
  "rules": {
      "space-before-function-paren": ["error", "never"],
      "quotes": ["error", "double"],
      "comma-dangle": ["error", "only-multiline"]
  }
}
